{
    "name": "make-burger",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "kill": "pkill node",
        "start": "export NODE_OPTIONS=--openssl-legacy-provider & npm run serve & npm run backend & npx wait-on http://localhost:8080",
        "start:win": "set NODE_OPTIONS=--openssl-legacy-provider & start npm run serve & start npm run backend & npx wait-on http://localhost:8080",
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "backend": "json-server --watch db/db.json",
        "cypress:open": "npx cypress open",
        "cypress:run": "npx cypress run",
        "cy2:run": "export CYPRESS_API_URL=http://localhost:1234 && npx cy2 run --record --key burger-store --parallel --ci-build `date +%s`"
    },
    "dependencies": {
        "@cypress/browserify-preprocessor": "^3.0.2",
        "core-js": "^3.6.5",
        "cucumber-reporter": "file:cucumber-reporter.tar",
        "cypress": "^12.11.0",
        "cypress-cucumber-preprocessor": "^4.3.1",
        "cypress-multi-reporters": "^1.6.2",
        "cypress-plugin-api": "^2.11.1",
        "json-server": "^0.17.0",
        "mocha-junit-reporter": "^2.2.0",
        "mocha-reporter": "file:mocha-reporter.tar",
        "mochawesome": "^7.1.3",
        "moment": "^2.29.4",
        "shelljs": "^0.8.5",
        "typescript": "^4.9.4",
        "vue": "^3.0.0",
        "vue-router": "^4.0.0-0",
        "webpack": "4.46",
        "webpack-dev-server": "^4.8.1"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "^4.5.17",
        "@vue/cli-plugin-router": "^4.5.17",
        "@vue/cli-service": "^4.5.17",
        "@vue/compiler-sfc": "^3.0.0",
        "cy2": "^1.3.0",
        "playwright-webkit": "^1.25.2"
    },
    "cypress-cucumber-preprocessor": {
        "nonGlobalStepDefinitions": false,
        "stepDefinitions": "cypress/support/step_definitions/",
        "cucumberJson": {
            "generate": true,
            "outputFolder": "reports/cucumber",
            "filePrefix": "",
            "fileSuffix": ".cucumber"
        }
    }
}
